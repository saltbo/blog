@tailwind base;
@tailwind components;
@tailwind utilities;
@require './config.styl'

h1 
  @apply text-2xl;

h2 
  @apply text-xl;

h3 
  @apply text-lg;

h1, h2, h3, h4, h5, h6
  font-weight 750
  line-height 1.25
  {$contentClass} > &
      @apply mt-8 mb-3
      &:first-child
        @apply mt-2

{$contentClass}
  @apply mx-20 !important